@model InloggenViewModel
@{ViewData["Title"] = "Inloggen";}

<h1>Inloggen</h1>

<form asp-action="Inloggen" method="post">
    <div>
        <label asp-for="Naam"></label>
        <span asp-validation-for="Naam" class="font-weight-bold text-danger"></span>
    </div>
    <div><input asp-for="Naam" /></div>

    <div class="mt-2">
        <label asp-for="Paswoord"></label>
        <span asp-validation-for="Paswoord" class="font-weight-bold text-danger"></span>
    </div>
    <div><input asp-for="Paswoord" /></div>

    <div class="mt-3"><input type="submit" value="Inloggen" /></div>

    @if (Model.Naam is not null)
    {
        <h3 class="text-danger">Opgegeven combinatie loginnaam en paswoord niet gevonden.</h3>
    }
</form>